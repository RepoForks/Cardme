<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="vm"
            type="com.popalay.cardme.presentation.screens.home.HomeViewModel"
            />
    </data>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >

                    <FrameLayout
                        android:id="@+id/host"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                    <include layout="@layout/shadow" />

                </FrameLayout>

                <android.support.design.widget.BottomNavigationView
                    android:id="@+id/bottom_bar"
                    style="@style/Cardme.BottomBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:menu="@menu/bottom_bar_menu"
                    bind:bottomNavigationListener="@{vm.bottomNavigationClick}"
                    />

            </LinearLayout>

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/Cardme.Toolbar"
                    app:navigationIcon="@drawable/ic_hamburger"
                    />

            </android.support.design.widget.AppBarLayout>

            <org.cryse.widget.persistentsearch.PersistentSearchView
                android:id="@+id/search_view"
                style="@style/Cardme.SearchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:visibility="gone"
                app:persistentSV_displayMode="menuItem"
                app:persistentSV_editHintText="@string/hint_search"
                app:persistentSV_editHintTextColor="@color/secondary_text"
                app:persistentSV_editTextColor="@color/primary_text"
                app:persistentSV_searchCardElevation="2dp"
                app:persistentSV_searchTextColor="?android:textColorPrimary"
                />

        </android.support.design.widget.CoordinatorLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/header_drawer"
            app:itemTextColor="@color/primary_text"
            app:menu="@menu/drawer_menu"
            bind:drawerNavigationListener="@{vm.drawerNavigationClick}"
            />

    </android.support.v4.widget.DrawerLayout>

</layout>
